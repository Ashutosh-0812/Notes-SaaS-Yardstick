{
  "name": "notes-saas-backend",
  "version": "1.0.0",
  "description": "Backend for multi-tenant notes application",
  "main": "index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "vercel-build": "npm install && cd ../frontend && npm install && npm run build && cd ../backend && rimraf public && mkdir public && copyfiles -u 1 ../frontend/dist/**/* public/",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1"
  }
}
